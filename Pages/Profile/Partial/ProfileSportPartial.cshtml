      <div class="mdc-layout-grid__cell--span-6 mdc-layout-grid__cell--span-4-tablet mdc-layout-grid__cell--span-2-phone">
        <i class="material-icons">
          landscape
        </i>
        <h6 class="mdc-typography--body1">Klettern/ Wandern</h6>
      </div>
    }
    @if (userSport.Bowling) {
      <div class="mdc-layout-grid__cell--span-6 mdc-layout-grid__cell--span-4-tablet mdc-layout-grid__cell--span-2-phone">
        <i class="material-icons">
          group_work
        </i>
        <h6 class="mdc-typography--body1">Bowling</h6>
      </div>
    }
  </div>
</div>