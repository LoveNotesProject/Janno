        </div>
        <div class="mdc-slider__thumb-container">
          <div class="mdc-slider__pin">
            <span class="mdc-slider__pin-value-marker">50</span>
          </div>
          <svg class="mdc-slider__thumb" width="21" height="21">
            <circle cx="10.5" cy="10.5" r="7.875"></circle>
          </svg>
          <div class="mdc-slider__focus-ring"></div>
        </div>
      </div>
    </div>

    <div class="search-group-button-container text-center">
      <button class="mdc-button" data-action-search-group>
        <div class="mdc-button__ripple"></div>
        <span class="mdc-button__label">Suchen</span>
      </button>
    </div>


  </div>
</div>
</div>
</div>

<style>
  
  .search-single-person-description, .search-group-description {
    padding: 16px 0 0 0;
  }
  .search-single-person > .mdc-typography--body2, .search-single-person-gender-container, .search-single-person-distance-container, .search-group-description, .search-group-amount-container, .search-group-distance-container {
    margin-bottom: 32px;
  }
  
  .search-single-person, .search-group {
    background-color: #eeeeee;
    padding: 16px;
  }
  
</style>

<script>


  let chipGender = new mdc.chips.MDCChipSet(document.querySelector('[data-chip-gender]'));
  let chipGroupAmount = new mdc.chips.MDCChipSet(document.querySelector('[data-chip-group-amount]'));
  
  
  window.addEventListener('load', () => {
          slidersElement = document.querySelectorAll('.mdc-slider');
          slidersElement.forEach((e) => {
            let slider = new mdc.slider.MDCSlider(e);
            
           slider.listen('MDCSlider:change', () => {
              slider.root_.classList.add('mdc-slider--active');
              e.firstElementChild.value = slider.value;
            });
           
             topAppBar.listen('MDCTopAppBar:nav', () => {
                       slider.layout();  
            });
           
          });
          
                   topAppBar.listen('MDCTopAppBar:nav', () => {
                   });

    
    if(getCookie('showDrawer') === true) {
    document.querySelector('.mdc-layout-grid').style = 'height: 100%; padding-bottom: 128px';
      
    } else {
    document.querySelector('.mdc-layout-grid').style = 'height: 100%; padding-bottom: 128px; max-width: 100%';
      
    }
  });

</script>